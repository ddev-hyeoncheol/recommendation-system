{
    "name": "Recommendation Service Dev",
    "workspaceFolder": "/home/vscode",
    "dockerComposeFile": [
        "../docker-compose.yml",
        "../docker-compose.dev.yml"
    ],
    "service": "develop",
    "remoteUser": "vscode",

    "shutdownAction": "none",

    "features": {
        "ghcr.io/devcontainers/features/python": {
            "version": "3.12",
            "installTools": true
        }
    },

    "postCreateCommand": "pip install --upgrade pip && pip install -r workspace/requirements.txt && pip install -r api/requirements.txt",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    }
}